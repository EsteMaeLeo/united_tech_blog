<article class="post">
    <div class="title">
        <h1>{{title}}</h1>
        <h2>({{post_text}})</h2>
    </div>
    <div class="meta">
        Comment(s) by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>